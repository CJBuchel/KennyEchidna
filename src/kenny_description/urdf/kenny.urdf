<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="kenny">

    <!--  ++++++++++++++++++++++++++++++++++++++++ MATERIALS -->

    <material name="yellow">
        <color rgba="0.98 0.85 0.37 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!--  ++++++++++++++++++++++++++++++++++++++++ PARAMETERS -->


    <xacro:property name="base_length" value="1" />
    <xacro:property name="base_width" value="0.4" />
    <xacro:property name="base_depth" value="0.3" />

    <xacro:property name="off_floor" value="${0.2}" />

    <xacro:property name="wheel_length" value="0.8" />
    <xacro:property name="wheel_width" value="0.1" />
    <xacro:property name="wheel_depth" value="0.3" />

    <xacro:property name="reel_rad" value="0.15" />
    <xacro:property name="reel_length" value="0.1" />
    <xacro:property name="reel_base_offset" value="0.1" />

    <xacro:property name="link1_length" value="0.8"/>
    <xacro:property name="link1_width" value="0.3"/>
    <xacro:property name="link1_depth" value="0.2"/>

    <xacro:property name="link2_length" value="0.6"/>
    <xacro:property name="link2_width" value="0.3"/>
    <xacro:property name="link2_depth" value="0.2"/>
    <xacro:property name="link2_default_rotation" value="-0.65"/>


    <xacro:property name="link3_length" value="0.5"/>
    <xacro:property name="link3_width" value="0.1"/>
    <xacro:property name="link3_depth" value="0.1"/>

    <xacro:property name="camera_pan_rad" value="0.05"/>
    <xacro:property name="camera_pan_length" value="0.05"/>
    <xacro:property name="pan_arm_offset" value="0.1"/>

    <xacro:property name="camera_tilt_length" value="0.05"/>
    <xacro:property name="camera_tilt_width" value="0.05"/>
    <xacro:property name="camera_tilt_depth" value="0.05"/>

    

    <!--  ++++++++++++++++++++++++++++++++++++++++ LINKS -->

    <link name="base_link">
        <visual>
            <geometry>
                <box size="${base_length} ${base_width} ${base_depth}"/>
            </geometry>
            <origin xyz="0 0 ${off_floor}" />
            <material name="yellow"/>
        </visual>
        <collision>
            <geometry>
                <box size="${base_length} ${base_width} ${base_depth}"/>
            </geometry>
            <origin xyz="0 0 ${off_floor}" />
        </collision>
    </link>

    <link name="wheel_left">
        <visual>
            <geometry>
                <box size="${wheel_length} ${wheel_width} ${wheel_depth}"/>
            </geometry>
            <origin xyz="0 0 0"/>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <box size="${wheel_length} ${wheel_width} ${wheel_depth}"/>
            </geometry>
            <!-- <origin xyz="0 0 0"/> -->
        </collision>
    </link>
    <joint name="base_to_wheel_left" type="fixed">
        <parent link="base_link"/>
        <child link="wheel_left"/>
        <origin xyz="0 ${-0.5*(base_width+wheel_width)} ${off_floor+(off_floor - wheel_depth)/2}" />
    </joint>


    <link name="wheel_right">
        <visual>
            <geometry>
                <box size="${wheel_length} ${wheel_width} ${wheel_depth}"/>
            </geometry>
            <origin xyz="0 0 0"/>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <box size="${wheel_length} ${wheel_width} ${wheel_depth}"/>
            </geometry>
            <!-- <origin xyz="0 0 0"/> -->
        </collision>
    </link>
    <joint name="base_to_wheel_right" type="fixed">
        <parent link="base_link"/>
        <child link="wheel_right"/>
        <origin xyz="0 ${0.5*(base_width+wheel_width)} ${off_floor+(off_floor - wheel_depth)/2}" />
    </joint>


    <link name="reel">
        <visual>
            <geometry>
                <cylinder length="${reel_length}" radius="${reel_rad}"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="yellow"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="${reel_length}" radius="${reel_rad}"/>
            </geometry>
            <!-- <origin xyz="0 0 0"/> -->
        </collision>
    </link>
    <joint name="base_to_reel" type="continuous">
        <parent link="base_link"/>
        <child link="reel"/>
        <axis xyz="0 0 1"/>
        <!-- <origin xyz="${reel_base_offset} 0 ${base_depth+reel_length/2}" rpy="0 0 0" /> -->
        <!-- <origin xyz="${reel_base_offset} 0 0" rpy="0 0 0" /> -->
        <!-- <origin xyz="0 0 0" /> -->
        <origin xyz="${reel_base_offset} 0 ${base_depth+reel_length/2}" />
    </joint>


    <link name="arm_link1">
        <visual>
            <geometry>
                <box size="${link1_length} ${link1_width} ${link1_depth}"/>
            </geometry>
            <material name="yellow"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <box size="${link1_length} ${link1_width} ${link1_depth}"/>
            </geometry>
        </collision>
    </link>
    <joint name="reel_to_link1" type="fixed">
        <parent link="reel"/>
        <child link="arm_link1"/>
        <origin xyz="${-1*reel_base_offset} 0 ${reel_length/2+link1_depth/2}" rpy="0 0 0"/>
    </joint>


    <link name="arm_link2">
        <visual>
            <geometry>
                <box size="${link2_depth} ${link2_width} ${link2_length}"/>
            </geometry>
            <origin xyz="0 0 ${link2_length/2}" rpy="0 0 0"/>
            <material name="yellow"/>
        </visual>
        <collision>
            <geometry>
                <box size="${link2_depth} ${link2_width} ${link2_length}"/>
            </geometry>
            <origin xyz="0 0 ${link2_length/2}" rpy="0 0 0"/>
        </collision>
    </link>
    <joint name="link1_to_link2" type="revolute">
        <parent link="arm_link1"/>
        <child link="arm_link2"/>
        <axis xyz="0 1 0"/>
        <origin xyz="${link1_length/2} 0 0" rpy="0 ${link2_default_rotation} 0"/>
        <!-- <origin xyz="${link1_length/2-link2_depth/2} 0 0" rpy="0 0 0"/> -->
        <limit effort="1000.0" lower="0" upper="1.65" velocity="0.5"/>
    </joint>

    <link name="arm_link3">
        <visual>
            <geometry>
                <box size="${link3_length} ${link3_width} ${link3_depth}"/>
            </geometry>
            <origin xyz="${link3_length/2} 0 0" rpy="0 0 0"/>
            <material name="yellow"/>
        </visual>
        <collision>
            <geometry>
                <box size="${link3_length} ${link3_width} ${link3_depth}"/>
            </geometry>
            <origin xyz="${link3_length/2} 0 0" rpy="0 0 0"/>
        </collision>
    </link>
    <joint name="link2_to_link3" type="revolute">
        <parent link="arm_link2"/>
        <child link="arm_link3"/>
        <axis xyz="0 1 0"/>
        <origin xyz="0 0 ${link2_length}" rpy="0 0.84 0"/>
        <limit effort="1000.0" lower="-0.84" upper="0" velocity="0.5"/>
    </joint>


    <link name="camera_pan">
        <visual>
            <geometry>
                <cylinder length="${camera_pan_length}" radius="${camera_pan_rad}"/> 
            </geometry>
            <origin xyz="0 0 ${camera_pan_length/2}" rpy="0 0 0"/>
            <material name="yellow"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="${camera_pan_length}" radius="${camera_pan_rad}"/> 
            </geometry>
        </collision>
    </link>
    <joint name="camera_pan_to_arm1" type="revolute">
        <parent link="arm_link1"/>
        <child link="camera_pan"/>
        <axis xyz="0 0 1"/>
        <origin xyz="${pan_arm_offset} 0 ${link1_depth/2}" rpy="0 0 0"/>
        <limit effort="1000.0" lower="-0.84" upper="0" velocity="0.5"/>
    </joint>

    <link name="camera_tilt">
        <visual>
            <geometry>
                <box size="${camera_tilt_length} ${camera_tilt_width} ${camera_tilt_depth}"/>
            </geometry>
            <origin xyz="0 0 0"/>
            <material name="yellow"/>
        </visual>
        <collision>
            <geometry>
                <box size="${camera_tilt_length} ${camera_tilt_width} ${camera_tilt_depth}"/>
            </geometry>
        </collision>
    </link>
    <joint name="camera_tilt_to_pan" type="revolute">
        <!-- <parent name="camera_pan"/>
        <child name="camera_tilt"/> -->
        <axis xyz="0 1 0"/>
        <origin xyz="0 0 ${camera_pan_length/2+camera_tilt_length}" rpy="0 0 0"/>
        <limit effort="1000.0" lower="-0.84" upper="0" velocity="0.5"/>
    </joint>


</robot>