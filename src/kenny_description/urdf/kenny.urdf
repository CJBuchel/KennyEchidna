<?xml version="1.0"?>
<robot name="kenny">

    <!--  ++++++++++++++++++++++++++++++++++++++++ MATERIALS -->

    <material name="yellow">
        <color rgba="0.98 0.85 0.37 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!--  ++++++++++++++++++++++++++++++++++++++++ LINKS -->

    <link name="base_link">
        <visual>
            <geometry>
                <box size="1 0.4 0.3"/>
            </geometry>
            <!-- <origin rpy -->
            <material name="yellow"/>
        </visual>
    </link>

    
    <link name="wheel_left">
        <visual>
            <geometry>
                <box size="1 0.1 0.3"/>
            </geometry>
            <origin xyz="0 -0.3 0" />
            <material name="black"/>
        </visual>
    </link>

    <link name="wheel_right">
        <visual>
            <geometry>
                <box size="1 0.1 0.3"/>
            </geometry>
            <origin xyz="0 0.3 0" />
            <material name="black"/>
        </visual>
    </link>

    <link name="neck_base">
        <visual>
            <geometry>
                <cylinder length="0.6" radius="0.1"/>
            </geometry>
            <origin xyz="0.45 0 0.5" />
            <material name="yellow"/>
        </visual>
    </link>

    <!--  ++++++++++++++++++++++++++++++++++++++++ JOINTS -->

    <joint name="base_to_neck" type="continuous">
        <parent link="base_link"/>
        <child link="neck_base"/>
    </joint>

    <joint name="base_to_wheel_right" type="fixed">
        <parent link="base_link"/>
        <child link="wheel_right"/>
    </joint>

    <joint name="base_to_wheel_left" type="fixed">
        <parent link="base_link"/>
        <child link="wheel_left"/>
    </joint>
    


</robot>